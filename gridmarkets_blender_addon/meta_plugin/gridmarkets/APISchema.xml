<?xml version="1.0" encoding="utf-8"?>
<APISchema>

    <JobDefinitions>
        <JobDefinition id="BLENDER_CYCLES">

            <DisplayName>Blender Cycles</DisplayName>

            <Attribute key="name">
                <DisplayName>Name</DisplayName>
                <Description>The name of the job.</Description>
                <Optional>False</Optional>
                <InferenceSources>
                    <InferenceSource>USER_DEFINED</InferenceSource>
                </InferenceSources>
                <Type>STRING</Type>
            </Attribute>

            <Attribute key="app">
                <DisplayName>Product Type</DisplayName>
                <Description>The name of the product / app to use.</Description>
                <Optional>False</Optional>
                <InferenceSources>
                    <InferenceSource>USER_DEFINED</InferenceSource>
                </InferenceSources>
                <Type>STRING</Type>
                <DefaultValue>blender</DefaultValue>
            </Attribute>

            <Attribute key="app_version">
                <DisplayName>Product Type</DisplayName>
                <Description>The version of the product / app to use.</Description>
                <Optional>False</Optional>
                <InferenceSources>
                    <InferenceSource>USER_DEFINED</InferenceSource>
                </InferenceSources>
                <Type>STRING</Type>
                <DefaultValue>2.80</DefaultValue>
            </Attribute>

            <Attribute key="operation">
                <DisplayName>Operation</DisplayName>
                <Description>The operation supported by the specified product version to carry out.</Description>
                <Optional>False</Optional>
                <InferenceSources>
                    <InferenceSource>USER_DEFINED</InferenceSource>
                </InferenceSources>
                <Type>STRING</Type>
                <DefaultValue>render</DefaultValue>
            </Attribute>

            <Attribute key="path">
                <DisplayName>Render File</DisplayName>
                <Description>The path to your .blend file expressed relative to the remote project folder. If your project name is 'sample_project' then remote root becomes '/sample project'. The render file path would then be '/sample project/sample.blend'.</Description>
                <Optional>False</Optional>
                <InferenceSources>
                    <InferenceSource>USER_DEFINED</InferenceSource>
                </InferenceSources>
                <Type>STRING</Type>
                <DefaultValue></DefaultValue>
            </Attribute>

            <Attribute key="frames">
                <DisplayName>Frame Ranges</DisplayName>
                <Description>The frame ranges to render. Specified in the following format 'start [end] [step],[start [end] [step]],...'.</Description>
                <Optional>True</Optional>
                <InferenceSources>
                    <InferenceSource>USER_DEFINED</InferenceSource>
                </InferenceSources>
                <Type>STRING</Type>
                <DefaultValue>1 1 1</DefaultValue>
            </Attribute>

            <Attribute key="output_prefix">
                <DisplayName>Output Prefix</DisplayName>
                <Description>The prefix to add to render results.</Description>
                <Optional>True</Optional>
                <InferenceSources>
                    <InferenceSource>USER_DEFINED</InferenceSource>
                </InferenceSources>
                <Type>STRING</Type>
                <DefaultValue>GM_</DefaultValue>
            </Attribute>

            <Attribute key="output_format">
                <DisplayName>Output Format</DisplayName>
                <Description>The output format to use when rendering the scene.</Description>
                <Optional>True</Optional>
                <InferenceSources>
                    <InferenceSource>USER_DEFINED</InferenceSource>
                </InferenceSources>
                <Type>ENUM</Type>
                <Items>
                    <Item>
                        <Key>TGA</Key>
                        <DisplayName>TGA</DisplayName>
                        <Description></Description>
                    </Item>
                    <Item>
                        <Key>RAWTGA</Key>
                        <DisplayName>RAWTGA</DisplayName>
                        <Description></Description>
                    </Item>
                    <Item>
                        <Key>JPEG</Key>
                        <DisplayName>JPEG</DisplayName>
                        <Description></Description>
                    </Item>
                    <Item>
                        <Key>JPEG2000</Key>
                        <DisplayName>JPEG 2000</DisplayName>
                        <Description></Description>
                    </Item>
                    <Item>
                        <Key>IRIS</Key>
                        <DisplayName>IRIS</DisplayName>
                        <Description></Description>
                    </Item>
                    <Item>
                        <Key>PNG</Key>
                        <DisplayName>PNG</DisplayName>
                        <Description></Description>
                    </Item>
                    <Item>
                        <Key>TARGA</Key>
                        <DisplayName>Targa</DisplayName>
                        <Description></Description>
                    </Item>
                    <Item>
                        <Key>TARGA_RAW</Key>
                        <DisplayName>Targa Raw</DisplayName>
                        <Description></Description>
                    </Item>
                    <Item>
                        <Key>BMP</Key>
                        <DisplayName>BMP</DisplayName>
                        <Description></Description>
                    </Item>
                    <Item>
                        <Key>CINEON</Key>
                        <DisplayName>Cineon</DisplayName>
                        <Description></Description>
                    </Item>
                    <Item>
                        <Key>DPX</Key>
                        <DisplayName>DPX</DisplayName>
                        <Description></Description>
                    </Item>
                    <Item>
                        <Key>OPEN_EXR_MULTILAYER</Key>
                        <DisplayName>OpenEXR Multilayer</DisplayName>
                        <Description></Description>
                    </Item>
                    <Item>
                        <Key>EXR</Key>
                        <DisplayName>OpenEXR</DisplayName>
                        <Description></Description>
                    </Item>
                    <Item>
                        <Key>HDR</Key>
                        <DisplayName>Radiance HDR</DisplayName>
                        <Description></Description>
                    </Item>
                    <Item>
                        <Key>TIFF</Key>
                        <DisplayName>TIFF</DisplayName>
                        <Description></Description>
                    </Item>
                </Items>
                <DefaultValue>PNG</DefaultValue>
            </Attribute>

            <Attribute key="render_engine">
                <DisplayName>Render Engine</DisplayName>
                <Description>The render engine to use when rendering the scene.</Description>
                <Optional>True</Optional>
                <InferenceSources>
                    <InferenceSource>USER_DEFINED</InferenceSource>
                </InferenceSources>
                <Type>ENUM</Type>
                <Items>
                    <Item>
                        <Key>CYCLES</Key>
                        <DisplayName>Cycles</DisplayName>
                        <Description></Description>
                    </Item>
                </Items>
                <DefaultValue>CYCLES</DefaultValue>
            </Attribute>

            <Attribute key="gpu">
                <DisplayName>Use GPU Machine</DisplayName>
                <Description>Defines if a GPU is required for running the job. If false the job will be rendered on a CPU machine. If true a GPU machine will be used.</Description>
                <Optional>True</Optional>
                <InferenceSources>
                    <InferenceSource>USER_DEFINED</InferenceSource>
                </InferenceSources>
                <Type>BOOLEAN</Type>
                <DefaultValue>False</DefaultValue>
            </Attribute>

        </JobDefinition>

